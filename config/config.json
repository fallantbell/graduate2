{
    "project": "single_image_novelview_synthesis",
    "name": "re10K_epipolar_con3",
    "n_gpu": 2,

    "arch": {
        "type": "UNetModel",
        "args": {}
    },
    "data_loader": {
        "type": "re10k_DataLoader",
        "args":{
            "data_dir": "../../../disk2/icchiu",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 0,
            "max_interval": 5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 500,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 10,   
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "args":{
        "do_epipolar": true,
        "do_mae": false,
        "mask_ratio": 0.25
    }
}
